<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <p><%= link_to task.title, task_path(task) %></p>
  <% if task.completed %>
    <input type="checkbox" id="checkbox" name="completed" value="checkbox" checked disabled="true">
  <% else %>
    <input type="checkbox" id="checkbox" name="completed" value="checkbox" disabled="true">
  <% end %>
  <label for="completed">'Completed?'</label>
  <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>

<h3><%= link_to 'Create new task', new_task_path %></h3>
